                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compose-up",
            "type": "shell",
            "command": "docker-compose up",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compose-down",
            "type": "shell",
            "command": "docker-compose down --rmi all -v --remove-orphans",
